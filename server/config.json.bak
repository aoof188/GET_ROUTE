{
  "log": {
    "level": "info",
    "timestamp": true,
    "output": "/var/log/sing-box/sing-box.log"
  },

  "experimental": {
    "cache_file": {
      "enabled": true,
      "path": "/var/lib/sing-box/cache.db"
    },
    "clash_api": {
      "external_controller": "127.0.0.1:9090",
      "secret": ""
    }
  },

  "dns": {
    "servers": [
      {
        "tag": "dns-direct",
        "address": "https://223.5.5.5/dns-query",
        "detour": "direct"
      },
      {
        "tag": "dns-jp",
        "address": "https://1.1.1.1/dns-query",
        "detour": "wg-jp"
      },
      {
        "tag": "dns-sg",
        "address": "https://1.1.1.1/dns-query",
        "detour": "wg-sg"
      },
      {
        "tag": "dns-uk",
        "address": "https://1.1.1.1/dns-query",
        "detour": "wg-uk"
      },
      {
        "tag": "dns-block",
        "address": "rcode://success"
      }
    ],
    "rules": [
      {
        "outbound": "any",
        "server": "dns-direct"
      },
      {
        "rule_set": "geosite-category-ads-all",
        "server": "dns-block",
        "disable_cache": true
      },
      {
        "rule_set": "geosite-cn",
        "server": "dns-direct"
      },
      {
        "rule_set": [
          "geosite-netflix",
          "geosite-disney",
          "geosite-hbo"
        ],
        "server": "dns-sg"
      },
      {
        "rule_set": "geosite-bbc",
        "server": "dns-uk"
      },
      {
        "domain_suffix": [
          ".jp",
          ".co.jp"
        ],
        "server": "dns-jp"
      },
      {
        "domain_suffix": [
          ".sg",
          ".com.sg"
        ],
        "server": "dns-sg"
      },
      {
        "domain_suffix": [
          ".uk",
          ".co.uk"
        ],
        "server": "dns-uk"
      }
    ],
    "final": "dns-jp",
    "strategy": "prefer_ipv4",
    "independent_cache": true
  },

  "inbounds": [
    {
      "type": "vless",
      "tag": "vless-ws-in",
      "listen": "127.0.0.1",
      "listen_port": 10001,
      "sniff": true,
      "sniff_override_destination": false,
      "users": [
        {
          "uuid": "<YOUR_UUID>"
        }
      ],
      "transport": {
        "type": "ws",
        "path": "/ws"
      }
    },
    {
      "type": "vless",
      "tag": "vless-reality-in",
      "listen": "::",
      "listen_port": 40443,
      "sniff": true,
      "sniff_override_destination": false,
      "users": [
        {
          "uuid": "<YOUR_UUID>",
          "flow": "xtls-rprx-vision"
        }
      ],
      "tls": {
        "enabled": true,
        "server_name": "www.microsoft.com",
        "reality": {
          "enabled": true,
          "handshake": {
            "server": "www.microsoft.com",
            "server_port": 443
          },
          "private_key": "<REALITY_PRIVATE_KEY>",
          "short_id": [
            "<SHORT_ID>"
          ]
        }
      }
    },
    {
      "type": "hysteria2",
      "tag": "hy2-in",
      "listen": "::",
      "listen_port": 8443,
      "sniff": true,
      "sniff_override_destination": false,
      "users": [
        {
          "password": "<HY2_PASSWORD>"
        }
      ],
      "tls": {
        "enabled": true,
        "alpn": ["h3"],
        "certificate_path": "/etc/sing-box/cert/fullchain.pem",
        "key_path": "/etc/sing-box/cert/privkey.pem"
      }
    }
  ],

  "outbounds": [
    {
      "type": "direct",
      "tag": "direct"
    },
    {
      "type": "block",
      "tag": "block"
    },
    {
      "type": "dns",
      "tag": "dns-out"
    },

    {
      "type": "wireguard",
      "tag": "wg-jp",
      "server": "<SURFSHARK_JP_ENDPOINT>",
      "server_port": 51820,
      "local_address": [
        "<SURFSHARK_JP_ADDRESS>/32"
      ],
      "private_key": "<SURFSHARK_WG_PRIVATE_KEY_JP>",
      "peer_public_key": "<SURFSHARK_WG_PUBLIC_KEY_JP>",
      "mtu": 1280
    },
    {
      "type": "wireguard",
      "tag": "wg-sg",
      "server": "<SURFSHARK_SG_ENDPOINT>",
      "server_port": 51820,
      "local_address": [
        "<SURFSHARK_SG_ADDRESS>/32"
      ],
      "private_key": "<SURFSHARK_WG_PRIVATE_KEY_SG>",
      "peer_public_key": "<SURFSHARK_WG_PUBLIC_KEY_SG>",
      "mtu": 1280
    },
    {
      "type": "wireguard",
      "tag": "wg-uk",
      "server": "<SURFSHARK_UK_ENDPOINT>",
      "server_port": 51820,
      "local_address": [
        "<SURFSHARK_UK_ADDRESS>/32"
      ],
      "private_key": "<SURFSHARK_WG_PRIVATE_KEY_UK>",
      "peer_public_key": "<SURFSHARK_WG_PUBLIC_KEY_UK>",
      "mtu": 1280
    },

    {
      "type": "urltest",
      "tag": "auto-best",
      "outbounds": ["wg-jp", "wg-sg", "wg-uk"],
      "url": "https://www.gstatic.com/generate_204",
      "interval": "5m",
      "tolerance": 100
    }
  ],

  "route": {
    "rules": [
      {
        "protocol": "dns",
        "outbound": "dns-out"
      },
      {
        "ip_is_private": true,
        "outbound": "direct"
      },
      {
        "rule_set": "geosite-category-ads-all",
        "outbound": "block"
      },
      {
        "rule_set": "geosite-cn",
        "outbound": "direct"
      },
      {
        "rule_set": "geoip-cn",
        "outbound": "direct"
      },
      {
        "rule_set": [
          "geosite-netflix",
          "geosite-disney",
          "geosite-hbo"
        ],
        "outbound": "wg-sg"
      },
      {
        "rule_set": "geosite-bbc",
        "outbound": "wg-uk"
      },
      {
        "rule_set": [
          "geosite-google",
          "geosite-youtube",
          "geosite-github"
        ],
        "outbound": "wg-jp"
      },
      {
        "domain_suffix": [
          ".jp",
          ".co.jp"
        ],
        "outbound": "wg-jp"
      },
      {
        "domain_suffix": [
          ".sg",
          ".com.sg"
        ],
        "outbound": "wg-sg"
      },
      {
        "domain_suffix": [
          ".uk",
          ".co.uk"
        ],
        "outbound": "wg-uk"
      }
    ],
    "rule_set": [
      {
        "type": "remote",
        "tag": "geosite-cn",
        "format": "binary",
        "url": "https://raw.githubusercontent.com/SagerNet/sing-geosite/rule-set/geosite-cn.srs",
        "download_detour": "direct",
        "update_interval": "7d"
      },
      {
        "type": "remote",
        "tag": "geoip-cn",
        "format": "binary",
        "url": "https://raw.githubusercontent.com/SagerNet/sing-geoip/rule-set/geoip-cn.srs",
        "download_detour": "direct",
        "update_interval": "7d"
      },
      {
        "type": "remote",
        "tag": "geosite-category-ads-all",
        "format": "binary",
        "url": "https://raw.githubusercontent.com/SagerNet/sing-geosite/rule-set/geosite-category-ads-all.srs",
        "download_detour": "direct",
        "update_interval": "7d"
      },
      {
        "type": "remote",
        "tag": "geosite-netflix",
        "format": "binary",
        "url": "https://raw.githubusercontent.com/SagerNet/sing-geosite/rule-set/geosite-netflix.srs",
        "download_detour": "direct",
        "update_interval": "7d"
      },
      {
        "type": "remote",
        "tag": "geosite-disney",
        "format": "binary",
        "url": "https://raw.githubusercontent.com/SagerNet/sing-geosite/rule-set/geosite-disney.srs",
        "download_detour": "direct",
        "update_interval": "7d"
      },
      {
        "type": "remote",
        "tag": "geosite-hbo",
        "format": "binary",
        "url": "https://raw.githubusercontent.com/SagerNet/sing-geosite/rule-set/geosite-hbo.srs",
        "download_detour": "direct",
        "update_interval": "7d"
      },
      {
        "type": "remote",
        "tag": "geosite-bbc",
        "format": "binary",
        "url": "https://raw.githubusercontent.com/SagerNet/sing-geosite/rule-set/geosite-bbc.srs",
        "download_detour": "direct",
        "update_interval": "7d"
      },
      {
        "type": "remote",
        "tag": "geosite-google",
        "format": "binary",
        "url": "https://raw.githubusercontent.com/SagerNet/sing-geosite/rule-set/geosite-google.srs",
        "download_detour": "direct",
        "update_interval": "7d"
      },
      {
        "type": "remote",
        "tag": "geosite-youtube",
        "format": "binary",
        "url": "https://raw.githubusercontent.com/SagerNet/sing-geosite/rule-set/geosite-youtube.srs",
        "download_detour": "direct",
        "update_interval": "7d"
      },
      {
        "type": "remote",
        "tag": "geosite-github",
        "format": "binary",
        "url": "https://raw.githubusercontent.com/SagerNet/sing-geosite/rule-set/geosite-github.srs",
        "download_detour": "direct",
        "update_interval": "7d"
      }
    ],
    "final": "wg-jp",
    "auto_detect_interface": true
  }
}
